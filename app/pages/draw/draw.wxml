<!--draw.wxml-->
<view class="draw-container" onselectstart="return false;" disable-scroll="true">
  <view wx:if="{{game.drawer}}">轮到我画: {{game.answer}}</view>
  <view wx:else>轮到我猜: {{game.tips}}</view>
  <view class="draw-content">
    <view wx:if="{{game.drawer}}" class="tools-left" id="tools-left">
      <view bindtap="toolsChooseType" data-type="0" data-value="0" class="{{tools.color[0] ? 'tools-choose' : ''}} left-one"></view>
      <view bindtap="toolsChooseType" data-type="0" data-value="1" class="{{tools.color[1] ? 'tools-choose' : ''}} left-two"></view>
      <view bindtap="toolsChooseType" data-type="0" data-value="2" class="{{tools.color[2] ? 'tools-choose' : ''}} left-three"></view>
      <view bindtap="toolsChooseType" data-type="0" data-value="3" class="{{tools.color[3] ? 'tools-choose' : ''}} left-four"></view>
      <view bindtap="toolsChooseType" data-type="0" data-value="4" class="{{tools.color[4] ? 'tools-choose' : ''}} left-five"></view>
      <view bindtap="toolsChooseType" data-type="3" data-value="0" class="{{tools.abc ? 'tools-choose' : ''}} left-six">清</view>
    </view>
    <canvas style="width: 300px;height: 300px; margin: 10px auto;" canvas-id="draw" class="draw" disable-scroll="true" bindtouchstart="bindtouchstart" bindtouchmove="bindtouchmove" bindtouchend="bindtouchend" bindtouchcancel="bindtouchcancel" ></canvas>
    <view wx:if="{{game.drawer}}" class="tools-right" id="tools-right">
      <view bindtap="toolsChooseType" data-type="1" data-value="0" class="{{tools.size[0] ? 'tools-choose' : ''}} right-one">1</view>
      <view bindtap="toolsChooseType" data-type="1" data-value="1" class="{{tools.size[1] ? 'tools-choose' : ''}} right-two">2</view>
      <view bindtap="toolsChooseType" data-type="1" data-value="2" class="{{tools.size[2] ? 'tools-choose' : ''}} right-three">3</view>
      <view bindtap="toolsChooseType" data-type="1" data-value="3" class="{{tools.size[3] ? 'tools-choose' : ''}} right-four">4</view>
      <view bindtap="toolsChooseType" data-type="2" data-value="0" class="{{tools.tool[0] ? 'tools-choose' : ''}} right-five">笔</view>
      <view bindtap="toolsChooseType" data-type="2" data-value="1" class="{{tools.tool[1] ? 'tools-choose' : ''}} right-six">檫</view>
    </view>
  </view>
</view>
<view>
  <button bindtap='bindMatchGame' class='user-draw'>匹配</button>
  <span>
    <input class="input" bindinput="bindKeyInput" confirm-type="send" maxlength="500" placeholder="请输入发送内容" auto-focus/>
    <button bindtap='bindSendChat' class='user-draw'>发送</button>
  </span>
</view>
